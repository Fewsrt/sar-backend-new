{
  "name": "sar-backend-api",
  "version": "1.0.0",
  "description": "SAR Backend API for Car Sales ERP System",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --detectOpenHandles",
    "build": "tsc && npm run sentry:sourcemaps",
    "lint": "eslint .",
    "migrate": "prisma migrate deploy",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop sar-backend",
    "logs": "pm2 logs",
    "monitor": "pm2 monit",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org fasac --project node ./dist && sentry-cli sourcemaps upload --org fasac --project node ./dist"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@sentry/cli": "^2.39.1",
    "@sentry/node": "^8.47.0",
    "@sentry/profiling-node": "^8.47.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.0",
    "figlet": "^1.8.0",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "pm2": "^5.4.3",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "prisma": "^5.21.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/sar-backend-api.git"
  },
  "keywords": [
    "api",
    "backend",
    "car-sales",
    "erp"
  ]
}
